<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ProgressWheel="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/bg_default"
    android:orientation="horizontal"
    android:visibility="gone">

    <com.jinke.community.ui.view.ProgressWheel
        android:id="@+id/progressBarTwo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        ProgressWheel:pwBarColor="#339BB9"
        ProgressWheel:pwBarLength="60dp"
        ProgressWheel:pwBarWidth="4dp"
        ProgressWheel:pwRimColor="@color/bg_default"
        ProgressWheel:pwRimWidth="4dp"
        ProgressWheel:pwSpinSpeed="3dp"
        ProgressWheel:pwTextColor="@color/white"
        ProgressWheel:pwTextSize="18sp" />

</LinearLayout>